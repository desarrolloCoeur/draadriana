html
    overflow-x: hidden
body 
    overflow-x: hidden
    margin: 0 
    padding: 0
    font-family: Arquitecta, sans-serif
    color: da-texto

// Titulos
h1.titulo
    font-size: 2rem 
    font-weight: 800
    padding: 0 0 .25rem 0
    text-transform: uppercase
    text-align: center
    margin: .5rem 1rem 1.5rem
    color: da-texto
    letter-spacing: .5rem
    background: url('../img/linea.png') center bottom no-repeat

    &.blanco 
        color: white 
        background: none

// Botones 
button.boton_cita
    background: da-texto
    color: da-fondo
    border: none
    cursor: pointer
    padding: .5rem
    font-weight: 700
    font-size: 1.1rem
    text-transform: uppercase
    transition: all .5s ease
    &:hover, &:focus
        background: da-gris
        color: da-texto

#page-container
    min-height: 100vh
    background: da-fondo
    scroll-behavior: smooth


nav.navbar
    background-color: transparent 
    position: absolute
    width: 100%
    & .navbar-burger
        & span
            background-color: white
    
    &.follow
        position: fixed
        background-color: white
        & .navbar-burger
            & span 
                background-color: black

    & .navbar-item
        & img 
            max-height: 5rem
            &#color
                display: none
                &.show
                    display: block
            &#blanco
                display: block
                &.show
                    display: none

    & .navbar-menu
        & #navbarLinks
            position: absolute
            top: 5rem
            right: 0

            display: block
            filter: opacity(0)
            transform: translate(100%, 0)
            text-transform: uppercase
            font-size: 1.3rem
            background: white

            transition: all .5s ease-out

            &.is-active
                filter: opacity(1)
                transform: translate(0, 0)

        & .navbar-end
            align-items: center

            & .DermaNavbar
                & a 
                    &:hover, &:focus
                        background-color: transparent
                    & img 
                        filter: none
                        height: 46px
                        width: 161px
                        max-width: 161px
                        background: 0;
                        position: relative
                        right: 20px
                        

                        &.fixed, &:hover, &.fixed:hover
                            filter:none;

            & a
                margin: .5rem
                &.navbar-burger
                    display: block

                & img 
                    height: 24px

                    filter: invert(94%) sepia(18%) saturate(6312%) hue-rotate(298deg) brightness(115%) contrast(111%)

                    &.lang
                        filter: none;

                        &.fixed, &:hover, &.fixed:hover
                            filter:none;


                    &.fixed
                        filter: invert(99%) sepia(12%) saturate(22%) hue-rotate(35deg) brightness(101%) contrast(103%)
                        &:hover
                            filter: invert(18%) sepia(7%) saturate(9%) hue-rotate(339deg) brightness(94%) contrast(92%)

                    &:hover
                        filter: invert(98%) sepia(65%) saturate(687%) hue-rotate(132deg) brightness(105%) contrast(103%)
                    


