// Fonts
@import url('fonts.styl');

// Color Fondo
da-fondo = #FAFAFA 

// Color Texto
da-texto = #333333

// Color Rosa Principal
da-rosa = #ffb8b8
da-rosa-fuerte = #ff8585

// Color Gris Principal
da-gris = #c6c6c6
da-gris-fuerte = #adadad

// Color Azul complementario del rosa
da-azul-claro = #b8fff0
da-azul = #b8ffff
